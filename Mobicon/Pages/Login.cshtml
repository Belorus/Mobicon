@page
@model Mobicon.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .login-form {
        width: 480px;
        padding: 16px;
        margin: 36px auto;
        box-shadow: 1px 1px 10px -1px;
        border-radius: 5px;
    }
    .login-form-header {
        margin-bottom: 24px;
    }
    .login-btn {
        margin-top: 32px;
    }
</style>

<div class="d-flex flex-md-column login-form">
    <h1 class="login-form-header">Sign In to Configurator</h1>
    <form method="post">
        <div class="form-group">
            <input type="text" required name="username" class="form-control" id="username_field" placeholder="Username">
        </div>
        <div class="form-group">
            <input type="password" required name="password" class="form-control" id="password_field" placeholder="Password">
        </div>
        
        <div class="form-group login-btn">
            <button class="btn btn-lg btn-primary btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Sign In</button>
        </div>
    </form>
</div>