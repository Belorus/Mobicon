@page
@model Mobicon.Pages.SegmentModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<script>
    function onImportClick() {
        $('#importModal').modal('show');
    }
</script>


<div class="modal" id="importModal" tabindex="-1" role="dialog" aria-labelledby="importConfig" aria-hidden="true">
    <form method="post" asp-page-handler="import" class="form-inline">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importConfig">Import Config</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
    
                <div class="modal-body d-flex flex-column">
                    <input required type="text" class="form-control" name="name" placeholder="Enter config name">
                    <input type="hidden" name="id" value="@Model.Request.Query["id"]">
                    <textarea required placeholder="Enter config data" class="form-control import-config-entries" rows="7" name="data"></textarea>
                </div>
    
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Import</button>
                </div>
            </div>
        </div>
    </form>
    <style>
        .modal-body {
            width: 500px;
        }
        .import-config-entries {
            margin-top: 24px;
            max-height: 400px;
        }
    </style>
</div>

<div class="d-flex justify-content-between align-items-center">
    <h2>@Model.Name configs <span class="badge badge-info">@Model.Configs.Length</span></h2>
    <div class="d-flex">
        <buton class="btn btn-success import-form" onclick="onImportClick()">Import config</buton>
        <form method="post" class="d-flex justify-content-end">
            <div class="input-group add-list-item">
                <input type="text" name="configName" required placeholder="Enter config name" class="form-control">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-plus"></i> Add config</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="list-group items-list">
    @{
        foreach (var config in Model.Configs.OrderByDescending(x => x.UpdatedAt))
        {
            <a class="list-group-item list-group-item-action" href="/Config?id=@config.Id">
                <span class="text-primary">@config.Name</span>
                @if (config.Entries.Count > 0)
                {
                    <span>with entries:</span>
                    <div class="d-inline-block text-secondary">
                        @{
                            int i = 0;
                            int configPreviewCount = config.Entries.Count < 5 ? config.Entries.Count : 5;
                        }
                        @foreach (var c in config.Entries.Take(configPreviewCount))
                        {
                            i++;
                            if(i < configPreviewCount) { <span>@c.Key,</span> } else { <span>@c.Key</span>}
                        }
                    </div>
                    if (config.Entries.Count > configPreviewCount)
                    {
                        <span class="text-secondary"> and @(config.Entries.Count - configPreviewCount) more...</span>
                    }
                }
                else
                {
                    <span class="text-secondary">without entries</span>
                }
            </a>
        }
    }
</div>

<style>
    .import-form {
        margin-right: 36px;
    }
</style>
